<World>
  
  <Actor name = "Sky">    
    <Graphics type ="Sky">
      <Properties name = "SkyBox" />
      <TextureCube
        left =    "../../../Assets/Sky/Sky2/left.png"
        right =		"../../../Assets/Sky/Sky2/right.png"
        top =			"../../../Assets/Sky/Sky2/top.png"
        bottom =	"../../../Assets/Sky/Sky2/bottom.png"
        front =		"../../../Assets/Sky/Sky2/front.png"
        back =		"../../../Assets/Sky/Sky2/back.png"/>
    </Graphics>
  </Actor>

  <Actor name = "Terrain">
    <Graphics type ="HeightMap">
      <Properties mapFileName = "../../../Assets/Terrain/heightmap.png"                  
                  tileScale ="5"/>
      <Material textureFileName = "../../../Assets/Terrain/terrain.jpg"
                shininess = "2"
                specularColourR ="0.1" specularColourG ="0.1" specularColourB ="0.1"
                />
    </Graphics>
    <Physics>
      <PhysicsMaterial>Normal</PhysicsMaterial>
      <Density>infinite</Density>
      <Shape type ="plane">
        <Properties nX ="0" nY ="1.0" nZ ="0.0"/>
      </Shape>
    </Physics>
  </Actor>

  <Actor name = "Ironman">

    <Transform>
      <Position x ="0.0" y ="20" z ="-10.0" />
      <RotationInDegrees xAxis ="-90" yAxis ="-30.0" zAxis ="-30.0" />
    </Transform>
    
    <Graphics type ="Model">
      <Properties modelFileName = "../../../Assets/Ironman/Ironman.dae"/>
    </Graphics>
    
    <Physics>
      <PhysicsMaterial>Normal</PhysicsMaterial>
      <Density>aluminium</Density>
      <Shape type ="sphere">
        <Properties radius = "1.0" hasLocalInertia ="true"/>
      </Shape>
    </Physics>

  </Actor>
 
