  <Actor name = "Light2">
    <Transform>
      <Position x ="0.2" y ="40" z ="-10.0" />
      <RotationInDegrees xAxis ="-90" yAxis ="-30.0" zAxis ="-30.0" />
    </Transform>

    <Graphics type ="Light">
      <Properties  intenR="1" intenG="0" intenB="0"
                   attenuation="20.0"
                   type="Point"
        />
    </Graphics>
    <Physics>
      <PhysicsMaterial>Normal</PhysicsMaterial>
      <Density>aluminium</Density>
      <Shape type ="sphere">
        <Properties radius = "1.0" hasLocalInertia ="true"/>
      </Shape>
    </Physics>
  </Actor>
  <Actor name = "Light4">
    <Transform>
      <Position x ="5.0" y ="5" z ="-10.0" />
      <RotationInDegrees xAxis ="30" yAxis ="-60.0" zAxis ="-60.0" />
    </Transform>
    
    <Graphics type ="Light">
      <Properties  intenR="1" intenG="1" intenB="1"
                   attenuation="100.0"
                   theta ="60"
                   type="SpotLight"
        />
    </Graphics>
  </Actor>
  
  <Actor name = "Light3">
    <Graphics type ="Light">
      <Properties  ambientR ="0.0" ambientG ="0.0" ambientB ="0.0"
                   attenuation="10.0"
                   type="Sun"
        />
    </Graphics>
  </Actor>



  <Actor name = "Main Camera">
    <Graphics type ="Camera">
      <Properties mode = "Orbital" targetName = "Ironman"/>
      <Parameters
        FieldOfView ="45"
        AspectRatio ="1.7778"
        NearClip ="0.1"
        FarClip ="2000"/>
    </Graphics>
